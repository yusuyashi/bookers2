<body>
  <main>
    <div>
  <%= flash[:notice] %>
</div>

  <div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2 class="mb-0 border-bottom-0">User info</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
       <% if @user.profile_image.attached? %>
         <%= image_tag(@user.profile_image.variant(resize_to_limit: [100, 100])) %>
           <% else %>
            <%= image_tag 'no_image', size: "100x100" %>
        <% end %>
            </td>
          </tr>
          <tr>
            <th>name</th>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <th>introduction</th>
            <td><%= @user.introduction %></td>
          </tr>
        </tbody>
      </table>

<div class="row">
  <div class="col-12">
    <%= link_to edit_user_path(current_user), class: "btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog" aria-hidden="true"></i>
    <% end %>
  </div>
</div>
<h2 class="mt-3">New book</h2>
<%= form_with model: @book, url: books_path do |f| %>
  <p>Title</p>
  <%= f.text_field :title, class: "form-control", name: "book[title]" %>
  <p class="mt-3">Opinion</p>
  <%= f.text_area :body, class: "form-control", name: "book[body]" %>
  <%= f.submit 'Create Book', class: "btn btn-success mt-3 " %>
<% end %>


</div>
<div class="col-md-8 offset-md-1">
  <h2>Users</h2>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
  <% @users.each do |user| %>
  <tr>
    <td>
      <% if user.profile_image.attached? %>
        <%= image_tag(user.profile_image.variant(resize_to_limit: [100, 100])) %>
          <% else %>
            <%= image_tag 'no_image', size: "80x80" %>
      <% end %>
    </td>
    <td><%= user.name %></td>
    <td><%= link_to "Show", user_path(user) %></td>
  </tr>
<% end %>
</tbody>

  </table>
     </div>
    </div>
  </div>
 </main>
</body>