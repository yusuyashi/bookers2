<body>
  <main>
  <div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= image_tag(@user.profile_image.variant(resize_to_limit: [100, 100]), class: "rounded-circle") if @user.profile_image.attached? %>
            </td>
          </tr>
          <tr>
            <th>name</th>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <th>introduction</th>
            <td><%= @user.introduction %></td>
          </tr>
        </tbody>
      </table>

<div class="row">
  <div class="col-12">
    <%= link_to edit_user_path(current_user), class: "btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog" aria-hidden="true"></i>
    <% end %>
  </div>
</div>
<h2 class="mt-3">New book</h2>
<%= form_with model: @book do |f| %>
  <p>Title</p>
  <%= f.text_field :title, class: "form-control" %>
  <p class="mt-3">Opinion</p>
  <%= f.text_area :body, class: "form-control" %>
  <%= f.submit 'Create Book', class: "btn btn-success mt-3 " %>
<% end %>
</div>

<div class="col-md-8 offset-md-1">
  <h2>Books</h2>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to "Edit", edit_book_path(book.id) %></td>
    <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
  </tr>
<% end %>
</tbody>
    
  </table>
     </div>
    </div>
  </div>
 </main>
</body>
